<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TempBasedCalcController">
   <children>
      <VBox prefHeight="400.0" prefWidth="215.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Épület típus" />
            <ChoiceBox fx:id="epuletTipus" prefWidth="150.0" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Alapterület (m2)" />
            <TextField fx:id="alapterulet" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Beltéri hőmérséklet" />
            <Spinner fx:id="belteriHomerseklet" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Hőszigetelés" />
            <ChoiceBox fx:id="szigeteles" prefWidth="150.0" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Éves fűtési órák száma" />
            <TextField fx:id="futottOrak" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Energiahordozó" />
            <ChoiceBox fx:id="energiahordozo" prefWidth="150.0" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Fűtőberendezés (először állítsa be az energiahordozót!)" />
            <ChoiceBox fx:id="futoBerendezes" prefWidth="150.0" />
         </children>
      </VBox>
      <Button fx:id="calcButton" layoutX="444.0" layoutY="222.0" mnemonicParsing="false" onAction="#calculate" text="Szamítás" />
   </children>
</AnchorPane>
